        <nav class="navbar navbar-expand-sm justify-content-center sticky-top container-fluid embed-responsive-item"
             style="background-image: radial-gradient(circle, #c89986, #a8797b, #815f6f, #56485c, #2f3243); position: fixed">
            <!-- Links -->
            <ul class="navbar-nav ">
                <!-- MENÚ - pestaña Home -->
                <li class="nav-item ">
                    <button type="button" class="btn btn-informacion ">
                        <a class="nav-link" href="inicio">
                            <h3 class="text-center" style="color: white" > &nbsp;&nbsp; &nbsp;&nbsp;Inicio
                                <img src="../iconHome.png"  class=" rounded-circle " width="50" height="50" align="left" >
                            </h3>
                        </a>
                    </button>
                </li>
                <!-- FIN MENÚ - pestaña Home -->

                <!-- MENÚ - pestaña Resultados -->
                <li class="nav-item">
                    <button type="button" class="btn btn-informacion">
                        <a class="nav-link" href="informacion">
                            <h3 class="text-center" style="color: white" >&nbsp;&nbsp;&nbsp; Resultados&nbsp;
                                <img src="../iconDashboard.png"  class=" rounded" width="45" height="45" align="left" >
