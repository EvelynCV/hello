    var valoresNordiss = nordiss.map(
        function (nordis) {
            return nordis.id_dis;
        }
    )

    var valoresDiscapacidades = nordiss.map(
        function (discapacidad) {
            return discapacidad.id_nor;
        }
    )

    var datos = {
        labels : valoresNordiss,
        datasets : [{
            label : "datos 1",
            backgroundColor : "rgba(220,220,220,0.5)",
            data : valoresDiscapacidades
        }
        ]
    };

    console.log(datos)

    var canvas = document.getElementById('chart').getContext('2d');
    window.bar = new Chart(canvas, {
        type : "bar",
        data : datos,
        options : {
            elements : {
                rectangle : {
                    borderWidth : 1,
                    borderColor : "rgb(0,255,0)",
                    borderSkipped : 'bottom'
                }
            },
            responsive : true,
            title : {
                display : true,
                text : "Prueba de grafico de barras"
            }
        }
    });

</script>

