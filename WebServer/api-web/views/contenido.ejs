<script>
    console.log(<%- JSON.stringify(contenidos) %>)
    var contenidos = <%- JSON.stringify(contenidos) %>
        console.log(contenidos)
    console.log('holaaaa')

    var valoresContenidos = contenidos.map(
        function (contenido) {
            return contenido.id_con;
        }
    )

    var valoresNordis = contenidos.map(
        function (nordis) {
            return nordis.id_nordis;
        }
    )

    var datos = {
        labels : valoresContenidos,
        datasets : [{
            label : "datos 1",
            backgroundColor : "rgba(220,220,220,0.5)",
            data : valoresNordis
        }
        ]
    };

    console.log(datos)

    var canvas = document.getElementById('chart').getContext('2d');
    window.bar = new Chart(canvas, {
        type : "bar",
        data : datos,
        options : {
            elements : {
                rectangle : {
                    borderWidth : 1,
                    borderColor : "rgb(0,255,0)",
                    borderSkipped : 'bottom'
                }
            },
            responsive : true,
            title : {
                display : true,
                text : "Prueba de grafico de barras"
            }
        }
    });

</script>

